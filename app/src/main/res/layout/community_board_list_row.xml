<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/classesRelativeLayout">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewCampusBoard"
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="28dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="PrivateResource"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp">

            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Assist"
                app:chipIcon="@drawable/ic_baseline_push_pin_24"
                android:id="@+id/pinnedChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Pinned"
                android:clickable="false"
                android:textSize="12sp"
                app:chipIconSize="12dp"/>

            <TextView
                android:id="@+id/row_contact_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/pinnedChip"
                tools:ignore="HardcodedText"
                android:paddingTop="20dp"/>

            <TextView
                android:id="@+id/row_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Grade"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/row_contact_name"
                app:layout_constraintEnd_toStartOf="@id/pinnedChip"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/row_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Grade"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/row_content"
                app:layout_constraintEnd_toStartOf="@id/pinnedChip"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/row_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/row_title"
                app:layout_constraintEnd_toStartOf="@id/pinnedChip"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/imageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click to view image"
                android:textStyle="italic"
                app:layout_constraintTop_toBottomOf="@id/row_date"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>