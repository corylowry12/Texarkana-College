<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlNormal">@color/transparent</item>
        <item name="android:textColorHighlight">@color/itemIndicatorColor</item>
        <item name="backgroundColor">#ffffff</item>
        <item name="textColor">@android:color/black</item>
        <item name="alwaysDarkTextColor">#000000</item>
        <item name="navigationIconTintTheme">#000000</item>
        <item name="backArrowColor">#000000</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenuLightActionbar</item>
        <item name="viewCommunityBoardTransparency">#E6FFFFFF</item>
        <item name="bottomNavColor">@color/bottomNavBarBackground</item>
        <item name="bottomNavIconTint">#000000</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="iconTint">#000000</item>
        <item name="cancelButtonTextColor">@color/blue</item>
        <item name="textInputStyle">@style/MyTextInputLayout_light</item>
    </style>

    <style name="Dark" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/blue_for_dark_theme</item>
        <item name="colorControlActivated">@color/blue_for_dark_theme</item>
        <item name="backgroundColor">#000000</item>
        <item name="textColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="alwaysDarkTextColor">#000000</item>
        <item name="iconTint">#ffffff</item>
        <item name="navigationIconTintTheme">#ffffff</item>
        <item name="backArrowColor">#ffffff</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlowDark</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenu</item>
        <item name="radioButtonColor">@style/RadioButton</item>
        <item name="viewCommunityBoardTransparency">#E6000000</item>
        <item name="bottomNavColor">@color/bottomNavBarBackgroundDark</item>
        <item name="bottomNavIconTint">#ffffff</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="cancelButtonTextColor">@color/blue_for_dark_theme</item>
        <item name="textInputStyle">@style/MyTextInputLayout_dark</item>
    </style>

    <style name="MyTextInputLayout_light" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/blue</item>
        <item name="boxStrokeColor">@color/edit_text_stroke_color_dark</item>
    </style>

    <style name="MyTextInputLayout_dark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/blue_for_dark_theme</item>
        <item name="boxStrokeColor">@color/edit_text_stroke_color_dark</item>
    </style>

    <style name="RadioButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColorSecondary">#a9a9a9</item>
        <item name="colorControlNormal">#000000</item>
    </style>

    <style name="OverFlowDark">
        <item name="android:src">@drawable/ic_baseline_more_vert_24</item>

    </style>

    <style name="OverFlow">
        <item name="android:src">@drawable/ic_baseline_more_vert_24_dark</item>
    </style>

    <style name="PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/rounded_menu_dark</item>
        <item name="android:dropDownHorizontalOffset">-8dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>

    <style name="PopupMenuLightActionbar" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/rounded_menu_light</item>
        <item name="android:dropDownHorizontalOffset">-8dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="AlertDialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorSecondary">@android:color/black</item>
        <item name="colorSurface">@color/dialogLightBlue</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.70</item>
    </style>

    <style name="Widget.TexarkanaCollege.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="datePickerLight" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="backgroundColorDialog">@color/white</item>
        <item name="android:windowBackground">@drawable/date_picker</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.70</item>
    </style>

    <style name="datePickerDark" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="backgroundColorDialog">#383B3C</item>
        <item name="android:colorAccent">@color/cardViewLightBlue</item>
        <item name="colorPrimary">@color/cardViewLightBlue</item>
        <item name="android:windowBackground">@drawable/date_picker</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.70</item>
        <item name="colorOnPrimary">@color/blue_for_dark_theme</item>
    </style>

    <style name="BlueBGTextView">
        <item name="colorControlActivated">@color/cardViewLightBlue</item>
    </style>

</resources>