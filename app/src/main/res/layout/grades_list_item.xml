<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:id="@+id/cardViewHistory"
    style="?attr/materialCardViewElevatedStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/cardViewLightBlue"
    app:cardCornerRadius="28dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:id="@+id/gradesItemConstraintLayout"
            android:foreground="?attr/selectableItemBackground">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/gradesIconCardView"
            style="@style/Widget.Material3.CardView.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/gradesIconImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/blue"
                    app:circularflow_radiusInDP="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/gradesLetterGradeImageViewText"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="@id/gradesIconImageView"
                    app:layout_constraintEnd_toEndOf="@id/gradesIconImageView"
                    app:layout_constraintStart_toStartOf="@id/gradesIconImageView"
                    app:layout_constraintTop_toTopOf="@id/gradesIconImageView" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/row_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Name"
            android:textColor="?attr/alwaysDarkTextColor"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/cardViewGradeItem"
            app:layout_constraintStart_toEndOf="@id/gradesIconCardView"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/row_grade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Grade"
            android:textColor="?attr/alwaysDarkTextColor"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/cardViewGradeItem"
            app:layout_constraintStart_toEndOf="@id/gradesIconCardView"
            app:layout_constraintTop_toBottomOf="@id/row_name"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/row_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Weight"
            android:textColor="?attr/alwaysDarkTextColor"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/cardViewGradeItem"
            app:layout_constraintStart_toEndOf="@id/gradesIconCardView"
            app:layout_constraintTop_toBottomOf="@id/row_grade"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/row_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Date"
            android:textColor="?attr/alwaysDarkTextColor"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/cardViewGradeItem"
            app:layout_constraintStart_toEndOf="@id/gradesIconCardView"
            app:layout_constraintTop_toBottomOf="@id/row_weight"
            tools:ignore="HardcodedText" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewGradeItem"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:cardBackgroundColor="@color/cardViewLightBlue"
            app:cardCornerRadius="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:transitionName="transition_image" />
        </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>