<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AssignmentSettingsFragment"
    android:background="?attr/backgroundColor">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/assignmentSettingsAppBar"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@color/transparent"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/toolBarScrimColor"
            app:titleCollapseMode="scale"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBarAssignmentSettings"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
                app:title="Assignment Settings"
                app:titleCentered="true"
                app:buttonGravity="center_vertical"
                app:navigationIconTint="?attr/backArrowColor"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:overScrollMode="always"
        android:paddingBottom="25dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/coloredBackgroundsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Colored backgrounds for assignments"
                android:textColor="?attr/textColor"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewSetColoredBackgrounds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/coloredBackgroundsTextView"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="@color/cardViewLightBlue"
                app:cardCornerRadius="28dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:padding="10dp">

                    <RadioButton
                        android:id="@+id/enableColoredBackgrounds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:minHeight="48dp"
                        android:text="Enable Colored Backgrounds"
                        android:textColor="?attr/alwaysDarkTextColor"
                        android:textSize="12sp"
                        android:theme="@style/RadioButton" />

                    <RadioButton
                        android:id="@+id/disableColoredBackgrounds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:minHeight="48dp"
                        android:text="Disable Colored Backgrounds"
                        android:textColor="?attr/alwaysDarkTextColor"
                        android:textSize="12sp"
                        android:theme="@style/RadioButton" />

                </RadioGroup>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/categoryTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardViewSetColoredBackgrounds"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="?attr/textColor"
                android:text="Category text view for assignments"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewEnableCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/categoryTextView"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="@color/cardViewLightBlue"
                app:cardCornerRadius="28dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:padding="10dp">

                    <RadioButton
                        android:id="@+id/enableCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:minHeight="48dp"
                        android:text="Enable Category Text View"
                        android:textColor="?attr/alwaysDarkTextColor"
                        android:textSize="12sp"
                        android:theme="@style/RadioButton" />

                    <RadioButton
                        android:id="@+id/disableCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:minHeight="48dp"
                        android:text="Disable Category Text View"
                        android:textColor="?attr/alwaysDarkTextColor"
                        android:textSize="12sp"
                        android:theme="@style/RadioButton" />

                </RadioGroup>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/defaultCategoryTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardViewEnableCategory"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="?attr/textColor"
                android:text="Default category for assignments"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewDefaultCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/defaultCategoryTextView"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="@color/cardViewLightBlue"
                app:cardCornerRadius="28dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:padding="10dp">

                    <RadioButton
                        android:id="@+id/examCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:minHeight="48dp"
                        android:text="Exam"
                        android:textColor="?attr/alwaysDarkTextColor"
                        android:textSize="12sp"
                        android:theme="@style/RadioButton" />

                    <RadioButton
                        android:id="@+id/homeworkCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:minHeight="48dp"
                        android:text="Homework"
                        android:textColor="?attr/alwaysDarkTextColor"
                        android:textSize="12sp"
                        android:theme="@style/RadioButton" />

                    <RadioButton
                        android:id="@+id/otherCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:minHeight="48dp"
                        android:text="Other"
                        android:textColor="?attr/alwaysDarkTextColor"
                        android:textSize="12sp"
                        android:theme="@style/RadioButton" />

                </RadioGroup>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/rememberVisibilityTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardViewDefaultCategory"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="?attr/textColor"
                android:text="Remember Visibility of Items for Assignments"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewRememberVisibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rememberVisibilityTextView"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="@color/cardViewLightBlue"
                app:cardCornerRadius="28dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:padding="10dp">

                    <RadioButton
                        android:id="@+id/remember"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:minHeight="48dp"
                        android:text="Remember Visibility"
                        android:textColor="?attr/alwaysDarkTextColor"
                        android:textSize="12sp"
                        android:theme="@style/RadioButton" />

                    <RadioButton
                        android:id="@+id/dontRemember"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:minHeight="48dp"
                        android:text="Don't Remember Visibility"
                        android:textColor="?attr/alwaysDarkTextColor"
                        android:textSize="12sp"
                        android:theme="@style/RadioButton" />

                </RadioGroup>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>