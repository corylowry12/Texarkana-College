<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/classesRelativeLayout">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewCampusBoard"
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="28dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="PrivateResource"
        tools:visibility="visible"
        app:cardBackgroundColor="@color/cardViewLightBlue">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePicComments"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_baseline_close_24"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_baseline_close_24"
                app:civ_border_color="#3f51b5"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/row_display_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/profilePicComments"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText"
                android:paddingTop="5dp"
                android:paddingStart="2dp"
                android:paddingEnd="0dp"
                android:layout_marginStart="5dp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/row_comment_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Content"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/profilePicComments"
                app:layout_constraintTop_toBottomOf="@id/row_display_name"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText"
                android:paddingTop="4dp"
                android:paddingBottom="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/dateChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/profilePicComments"
                app:layout_constraintTop_toBottomOf="@id/row_comment_title"
                android:text="Date"
                app:chipBackgroundColor="@color/blue"
                android:textColor="@color/white"
                android:clickable="false"
                android:textSize="12sp"
                android:layout_marginStart="5dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>