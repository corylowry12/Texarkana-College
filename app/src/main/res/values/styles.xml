<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlNormal">@color/transparent</item>
        <item name="android:textColorHighlight">@color/itemIndicatorColor</item>
    </style>

    <style name="toggleButton" parent="Widget.Material3.Button.OutlinedButton" >
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="OverFlow">
        <item name="android:src">@drawable/ic_baseline_more_vert_24</item>

    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="AlertDialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorSecondary">@android:color/black</item>
        <item name="colorSurface">@color/dialogLightBlue</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.70</item>
    </style>

    <style name="Widget.TexarkanaCollege.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="datePickerLight" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="backgroundColorDialog">@color/white</item>
        <item name="android:windowBackground">@drawable/date_picker</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.70</item>
    </style>

</resources>