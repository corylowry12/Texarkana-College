<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/classesRelativeLayout">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewCampusBoard"
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="28dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="PrivateResource"
        app:cardBackgroundColor="@color/cardViewLightBlue"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:src="@drawable/ic_baseline_settings_24"
                app:civ_border_color="#3f51b5"
                app:civ_border_width="2dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="5dp"/>


            <com.google.android.material.chip.Chip
                style="@style/Widget.Material3.Chip.Assist"
                app:chipIcon="@drawable/ic_baseline_push_pin_24"
                android:id="@+id/pinnedChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Pinned"
                android:clickable="false"
                android:textSize="12sp"
                app:chipIconSize="12dp"/>

            <TextView
                android:id="@+id/row_contact_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/profilePic"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/pinnedChip"
                tools:ignore="HardcodedText"
                android:paddingTop="20dp"/>

            <TextView
                android:id="@+id/row_contact_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/profilePic"
                app:layout_constraintTop_toBottomOf="@id/row_contact_name"
                app:layout_constraintEnd_toStartOf="@id/chevronImage"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/row_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Grade"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/profilePic"
                app:layout_constraintTop_toBottomOf="@id/row_contact_email"
                app:layout_constraintEnd_toStartOf="@id/chevronImage"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/row_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Grade"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/profilePic"
                app:layout_constraintTop_toBottomOf="@id/row_title"
                app:layout_constraintEnd_toStartOf="@id/chevronImage"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/row_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/profilePic"
                app:layout_constraintTop_toBottomOf="@id/row_content"
                app:layout_constraintEnd_toStartOf="@id/chevronImage"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/imageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click to view image"
                android:textStyle="italic"
                app:layout_constraintTop_toBottomOf="@id/row_date"
                app:layout_constraintStart_toEndOf="@id/profilePic" />

            <ImageView
                android:id="@+id/chevronImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_baseline_chevron_right_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>