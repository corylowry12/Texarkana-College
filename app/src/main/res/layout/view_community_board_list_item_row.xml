<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/classesRelativeLayout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicComments"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/cardViewCampusBoard"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_baseline_close_24"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_baseline_close_24"
        android:layout_marginTop="5dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewCampusBoard"
        style="?attr/materialCardViewElevatedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="28dp"
        android:layout_marginTop="5dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="PrivateResource"
        android:layout_toEndOf="@id/profilePicComments"
        app:cardBackgroundColor="@color/cardViewLightBlue">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/row_display_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/row_comment_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Content"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/row_display_name"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText"
                android:paddingTop="4dp"
                android:paddingBottom="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardViewCampusBoard"
        android:layout_alignStart="@id/cardViewCampusBoard"
        android:layout_alignEnd="@id/cardViewCampusBoard"
        android:layout_marginStart="20dp"
        android:text="DATE"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>